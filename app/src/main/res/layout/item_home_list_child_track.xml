<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.nakhmadov.topworldmusic.data.db.models.Track" />

        <variable
            name="listener"
            type="com.nakhmadov.topworldmusic.listeners.TrackClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:onClick="@{() -> listener.onClick(item)}"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="18dp">

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/track_image_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:shape_roundRect_bottomLeftRadius="4dp"
            app:shape_roundRect_bottomRightRadius="4dp"
            app:shape_roundRect_topLeftRadius="4dp"
            app:shape_roundRect_topRightRadius="4dp">

            <ImageView
                imageWithUrl="@{item.albumImage}"
                android:layout_width="140dp"
                android:layout_height="140dp" />

        </com.github.florent37.shapeofview.shapes.RoundRectView>

        <TextView
            android:id="@+id/track_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:text="@{item.title}"
            android:textColor="@color/textGrayColorDark"
            android:textSize="14sp"
            tools:text="Dance Monkey"
            app:layout_constraintEnd_toEndOf="@id/track_image_card"
            app:layout_constraintStart_toStartOf="@id/track_image_card"
            app:layout_constraintTop_toBottomOf="@id/track_image_card" />

        <TextView
            android:id="@+id/track_artists_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:text="@{item.artistName}"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/track_image_card"
            app:layout_constraintStart_toStartOf="@id/track_image_card"
            app:layout_constraintTop_toBottomOf="@id/track_title_text"
            tools:text="Niall Horan" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>